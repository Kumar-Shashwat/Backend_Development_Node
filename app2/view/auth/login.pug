extend ../layout/shop-layout.pug

block style 
    link(rel="stylesheet", href="/style/add-product.css")

block content 
     main
            if(errorMessage)
                div.user-message.user-message--error #{errorMessage}

            form.product-form( action="/login" method="POST")
                div.form-control
                    label( for="email") Email
                    input#title(type="email" name="email" value = '' )

                div.form-control
                    label( for="password") password 
                    input#price(type="password" name="password"  value= '' )


                    //- button(type="submit") Add Product 
                input(type="hidden" name="_csrf" value= csrfToken)
                button(type="submit") Login


