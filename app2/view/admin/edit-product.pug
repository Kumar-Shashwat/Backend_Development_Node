extend ../layout/admin-layout.pug

block style 
    link(rel="stylesheet", href="/style/add-product.css")

block content 
     main
            form.product-form( action="/admin/"+(editing? 'edit-product/'+ product.id : 'add-product') method="POST")
                div.form-control
                    label( for="title") Enter Title
                    input#title(type="text" name="title" value = (editing? product.title :'Dunes' ) )

                div.form-control
                    label( for="price") Price 
                    input#price(type="text" name="price"  value= (editing? product.price :'150' ) )

                div.form-control
                    label( for="imageUrl") Image URL
                    input#imageUrl(type="text" name="imageUrl", value = (editing? product.imageUrl :'https://img.freepik.com/premium-photo/opened-book-with-flying-pages-butterflies-dark-backgroundgenerative-ai_391052-12859.jpg') )

                div.form-control
                    label( for="author") Author
                    input#author(type="text" name="author" value = (editing? product.author :'shashwat' ) ) 

                div.form-control
                    label( for="description") Description
                    if editing 
                        textarea#description(type="text" name="description" rows="5" ) #{product.description}
                    else 
                        textarea#description(type="text" name="description" rows="5" ) A Great book to understand the things.

                    //- button(type="submit") Add Product 
                    if editing
                        button(type="submit") Update Product
                    else 
                        button(type="submit") Add Product 

