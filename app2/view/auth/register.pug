extend ../layout/shop-layout.pug

block style 
    link(rel="stylesheet", href="/style/add-product.css")

block content 
     main
            if(errorMessage)
                div.user-message.user-message--error #{errorMessage}

            form.product-form( action="/register" method="POST")
                div.form-control
                    label( for="name") Name
                    input#title(type="text" name="name" value = 'pawan')
                
                div.form-control
                    label( for="email") Email
                    input#title(type="email" name="email" value = 'test@test.com' )

                div.form-control
                    label( for="password") Password 
                    input#price(type="password" name="password"  value= 'test' )

                div.form-control
                    label( for="password") Confirm password 
                    input#price(type="password" name="confirmPassword"  value= 'test' )


                    //- button(type="submit") Add Product 
                button(type="submit") Register
                input(type="hidden" name="_csrf" value= csrfToken)